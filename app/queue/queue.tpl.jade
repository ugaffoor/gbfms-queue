//-.row
  .col-xs-12
    h3 {{queue.queueName}} 
      small
        a.btn.btn-default.btn-sm(data-ui-sref="queue.create") Add {{queue.queueType}}
.row.visible-xs
  .col-xs-12
    select.form-control.visible-xs(data-ng-options="filter.name as filter.name for filter in queue.filters",data-ng-model="queue.filterName",data-ng-change="queue.changeFilter()")
.row
  .col-xs-2.hidden-xs
    ul.nav.nav-pills.nav-stacked
      li(data-ng-repeat="filter in queue.filters",data-ng-class="{'active': queue.filterName === filter.name}")
        a.ellipsis(href="",data-ui-sref="queue.by({filterName: filter.name})", data-ui-sref-opts="{reload:true}") {{filter.name}}
  .col-xs-12.col-sm-10
    div(data-ui-view="")
